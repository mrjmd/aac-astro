---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import Navbar from '../../../components/Navbar.astro';
import Footer from '../../../components/Footer.astro';
import LocationModal from '../../../components/LocationModal.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import Icon from '../../../components/Icon.astro';

const categoryLabels: Record<string, string> = {
  'guides': 'Guides',
  'case-studies': 'Case Studies',
  'cost-guides': 'Cost Guides',
  'maintenance-tips': 'Maintenance Tips',
  'news': 'News'
};

const categoryDescriptions: Record<string, string> = {
  'guides': 'In-depth guides to understanding foundation problems, repair methods, and maintenance. Expert advice from CT and MA foundation repair specialists.',
  'case-studies': 'Real foundation repair projects from Attack A Crack. See before and after photos, learn about repair methods used, and understand the results we deliver.',
  'cost-guides': 'Transparent foundation repair pricing guides for CT and MA homeowners. Understand costs, factors affecting price, and how to budget for your repair project.',
  'maintenance-tips': 'Practical foundation maintenance tips to prevent water damage, cracks, and structural issues. Protect your home investment with expert seasonal advice.',
  'news': 'Company updates, industry news, and announcements from Attack A Crack Foundation Repair serving Connecticut and Massachusetts homeowners since 2004.'
};

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const categories = [...new Set(posts.map(post => post.data.category))];

  return categories.map((category) => ({
    params: { category },
    props: {
      posts: posts
        .filter(post => post.data.category === category && !post.data.draft)
        .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
    },
  }));
}

const { category } = Astro.params;
const { posts } = Astro.props;

// Get all categories for filter buttons
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const allCategories = allPosts.reduce((acc, post) => {
  acc[post.data.category] = (acc[post.data.category] || 0) + 1;
  return acc;
}, {} as Record<string, number>);

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Blog', href: '/blog' },
  { label: categoryLabels[category as string] || category }
];

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout
  title={`${categoryLabels[category as string]} Blog Articles`}
  description={categoryDescriptions[category as string] || `${categoryLabels[category as string]} articles from Attack A Crack Foundation Repair.`}
>
	<LocationModal />
	<Navbar currentPage="blog" />

	<main class="pt-20 lg:pt-24">
		<!-- Hero Section -->
		<section class="py-20 lg:py-32 bg-white border-b-4 border-zinc-100">
			<div class="max-w-7xl mx-auto px-6">
				<Breadcrumbs items={breadcrumbItems} class="mb-8" />
				<div class="grid lg:grid-cols-2 gap-12 items-center">
					<div>
						<div class="inline-flex items-center gap-2 px-4 py-2 bg-aac-blue/10 text-aac-blue rounded-full text-[10px] font-black uppercase tracking-widest mb-6 border border-aac-blue/20">
							<Icon name="CheckCircle2" size={14} /> {posts.length} Articles
						</div>
						<h1 class="text-5xl lg:text-7xl font-black tracking-tighter mb-6 leading-none">
							{categoryLabels[category as string] || category}
						</h1>
						<p class="text-xl text-zinc-500 max-w-lg">
							{categoryDescriptions[category as string]}
						</p>
					</div>
					<div>
						<!-- Category Filters -->
						<div class="flex flex-wrap gap-3">
							<a href="/blog" class="px-4 py-2 bg-zinc-100 text-zinc-700 rounded-full text-sm font-bold hover:bg-aac-dark hover:text-white transition-colors">
								All Posts ({allPosts.length})
							</a>
							{Object.entries(allCategories).map(([cat, count]) => (
								<a
									href={`/blog/category/${cat}`}
									class:list={[
										"px-4 py-2 rounded-full text-sm font-bold transition-colors",
										cat === category
											? "bg-aac-dark text-white"
											: "bg-zinc-100 text-zinc-700 hover:bg-aac-blue hover:text-white"
									]}
								>
									{categoryLabels[cat]} ({count})
								</a>
							))}
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Posts Grid -->
		<section class="py-24 bg-zinc-50">
			<div class="max-w-7xl mx-auto px-6">
				{posts.length > 0 ? (
					<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
						{posts.map((post) => (
							<a href={`/blog/${post.id.replace(/\.md$/, '')}`} class="group bg-white rounded-[32px] overflow-hidden border-2 border-zinc-100 hover:border-aac-blue transition-all">
								<div class="aspect-video overflow-hidden">
									<img
										src={post.data.heroImage || "https://picsum.photos/seed/" + post.id + "/600/400"}
										alt={post.data.heroImageAlt || post.data.title}
										class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
										referrerpolicy="no-referrer"
									/>
								</div>
								<div class="p-8">
									<div class="flex items-center gap-4 mb-4">
										<span class="text-[10px] font-black uppercase tracking-widest text-aac-blue">
											{categoryLabels[post.data.category]}
										</span>
										<span class="text-[10px] text-zinc-400 font-bold">
											{formatDate(post.data.publishDate)}
										</span>
									</div>
									<h3 class="text-xl font-black mb-3 leading-tight group-hover:text-aac-blue transition-colors">
										{post.data.title}
									</h3>
									<p class="text-zinc-500 text-sm leading-relaxed mb-4 line-clamp-3">
										{post.data.excerpt}
									</p>
									<span class="inline-flex items-center gap-2 text-aac-dark font-black uppercase tracking-widest text-[10px] group-hover:gap-4 transition-all">
										Read Article <Icon name="ArrowRight" size={14} />
									</span>
								</div>
							</a>
						))}
					</div>
				) : (
					<div class="text-center py-16">
						<p class="text-zinc-500 text-lg">No posts in this category yet. Check back soon!</p>
						<a href="/blog" class="mt-4 inline-flex items-center gap-2 text-aac-blue font-bold">
							<Icon name="ArrowRight" size={14} class="rotate-180" />
							Back to all posts
						</a>
					</div>
				)}
			</div>
		</section>

		<!-- CTA Section -->
		<section class="py-16 bg-aac-yellow">
			<div class="max-w-4xl mx-auto px-6 text-center">
				<h2 class="text-3xl lg:text-4xl font-black text-aac-dark mb-6">
					Have a Foundation Question?
				</h2>
				<p class="text-lg text-aac-dark/70 mb-8">
					Get a free, no-pressure assessment from our experts. We'll give you honest answers about your foundation.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<button class="open-modal bg-aac-dark text-white px-8 py-4 rounded-xl font-black uppercase tracking-widest text-sm hover:translate-y-[-2px] transition-all inline-flex items-center justify-center gap-2">
						<Icon name="MessageSquare" size={20} />
						Text Us Photos
					</button>
					<a href="/services/free-foundation-consultations" class="bg-white text-aac-dark px-8 py-4 rounded-xl font-black uppercase tracking-widest text-sm hover:translate-y-[-2px] transition-all inline-flex items-center justify-center gap-2 border-2 border-aac-dark">
						Free Consultation
					</a>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>
